class Solution {
public:
    int minEatingSpeed(vector<int>& piles, int h) {
        int l=1, r= *max_element(piles.begin(), piles.end());
        while(l<r){
            int mid = (l+r)/2;

            int hours = 0;
            for(int i=0; i<piles.size(); i++){
                hours += piles[i]%mid ? piles[i]/mid+1 : piles[i]/mid;
            }
            if(hours<=h)
                r = mid;
            else
                l = mid+1;
        }
        return l;
        
    }
};
